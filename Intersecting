#include <iostream>

void main() {

	int i, V1[10], V2[10], V3[20], v1 = 0, v2 = 0;

	for (i = 0; i < 10; i++)

	{
		std::cout << "Escreve um numero o primeiro vetor";
		std::cin >> V1[i];
	}

	for (i = 0; i < 10; i++)

	{
		std::cout << "Escreve um numero para o segundo vetor";
		std::cin >> V2[i];
	}
	for (i = 0; i < 20; i++)
	{
		if (i % 2 == 0)
		{
			V3[i] = V1[v1];
			v1 = v1 + 1;
		}
		else
		{
			V3[i] = V2[v2];
			v2 = v2 + 1;
		} std::cout << V3[i];
	}
}
